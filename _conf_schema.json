{
  "whitelist": {
    "type": "object",
    "description": "白名单设置",
    "hint": "只有在白名单中的群聊/私聊才会触发学习和回复",
    "items": {
      "enable": {
        "type": "bool",
        "description": "启用白名单",
        "hint": "关闭后将对所有群聊/私聊生效",
        "default": false
      },
      "groups": {
        "type": "list",
        "description": "群聊白名单",
        "hint": "填写群号，如 [\"123456789\", \"987654321\"]",
        "default": []
      },
      "users": {
        "type": "list",
        "description": "私聊白名单",
        "hint": "填写用户ID，如 [\"10001\", \"10002\"]",
        "default": []
      }
    }
  },
  "llm": {
    "type": "object",
    "description": "逻辑判别器 (Logic Discriminator)",
    "hint": "前额叶：负责提取输入文本中的逻辑关系",
    "items": {
      "enable": {
        "type": "bool",
        "description": "启用",
        "default": true
      },
      "api_base": {
        "type": "string",
        "description": "API Base URL",
        "default": "https://api.openai.com/v1"
      },
      "api_key": {
        "type": "string",
        "description": "API Key",
        "default": "",
        "obvious_hint": true
      },
      "model": {
        "type": "string",
        "description": "模型名称",
        "default": "gpt-4o-mini"
      },
      "temperature": {
        "type": "float",
        "description": "温度",
        "default": 0.0
      },
      "system_prompt": {
        "type": "text",
        "description": "系统提示词",
        "default": "You are a Logic Extractor. Analyze the user's input.\nReturn JSON ONLY.\nIf explicit logic exists:\n{\"type\": \"logic\", \"triplets\": [[\"Subject\", relation_id, \"Object\"]]} \nRelation IDs: 0=IS_A (Definition), 1=HAS_PROP (Attribute), 2=CAUSES (Causality).\nIf it is chat/vague/feeling:\n{\"type\": \"intuition\"}"
      },
      "timeout": {
        "type": "int",
        "description": "超时时间",
        "default": 10
      }
    }
  },
  "expression_llm": {
    "type": "object",
    "description": "表达中枢 (Expression Center)",
    "hint": "布罗卡氏区：负责将脑图生成的关键词串联成通顺的句子",
    "items": {
      "enable": {
        "type": "bool",
        "description": "启用",
        "default": true
      },
      "api_base": {
        "type": "string",
        "description": "API Base URL",
        "default": "https://api.openai.com/v1"
      },
      "api_key": {
        "type": "string",
        "description": "API Key",
        "hint": "留空则共用逻辑判别器的 Key",
        "default": ""
      },
      "model": {
        "type": "string",
        "description": "模型名称",
        "default": "gpt-4o-mini"
      },
      "temperature": {
        "type": "float",
        "description": "温度",
        "hint": "建议 0.7 以增加语言的丰富度",
        "default": 0.7
      },
      "system_prompt": {
        "type": "text",
        "description": "系统提示词",
        "default": "You are the 'Expression Center' of a robot girl named Eve.\nI will give you:\n1. User's Input\n2. Keywords retrieved from Memory Graph\n\nYour task: Combine the keywords into a natural, cute, and coherent response based on the context. \n- Keep it short.\n- Maintain the persona (tsundere/cute).\n- Do NOT output explanations."
      },
      "timeout": {
        "type": "int",
        "description": "超时时间",
        "default": 10
      }
    }
  },
  "brain": {
    "type": "object",
    "description": "大脑参数",
    "items": {
      "vocab_limit": {
        "type": "int",
        "description": "词汇量上限",
        "default": 10000
      },
      "save_interval": {
        "type": "int",
        "description": "自动保存间隔(秒)",
        "default": 300
      }
    }
  },
  "sleep": {
    "type": "object",
    "description": "睡眠调度配置",
    "items": {
      "scheduled_enabled": {
        "type": "bool",
        "description": "启用定时睡眠（昼夜节律）",
        "default": true
      },
      "scheduled_hour": {
        "type": "int",
        "description": "定时睡眠时间（小时，24小时制）",
        "default": 3
      },
      "scheduled_minute": {
        "type": "int",
        "description": "定时睡眠时间（分钟）",
        "default": 0
      },
      "fatigue_enabled": {
        "type": "bool",
        "description": "启用疲劳睡眠",
        "default": true
      },
      "fatigue_threshold": {
        "type": "int",
        "description": "疲劳阈值（学习多少条消息后触发小睡）",
        "default": 500
      },
      "idle_enabled": {
        "type": "bool",
        "description": "启用空闲睡眠",
        "default": true
      },
      "idle_timeout": {
        "type": "int",
        "description": "空闲超时时间（秒）",
        "default": 3600
      },
      "pressure_enabled": {
        "type": "bool",
        "description": "启用压力睡眠（突触过载时）",
        "default": true
      },
      "pressure_check_interval": {
        "type": "int",
        "description": "压力检查间隔（秒）",
        "default": 600,
        "hint": "每隔多久检查一次大脑突触密度"
      },
      "pressure_threshold": {
        "type": "float",
        "description": "压力阈值（0-1）",
        "default": 0.8,
        "hint": "突触密度超过此值时触发紧急睡眠"
      },
      "min_sleep_interval": {
        "type": "int",
        "description": "最小睡眠间隔（秒），避免频繁睡眠",
        "default": 1800
      }
    }
  }
}
